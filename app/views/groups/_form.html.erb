<%= form_with model: group do |f| %>
<%= f.label :name %><br /><br />
<%= f.text_field :name, autofocus: true, autocomplete: "name" %>
<%= f.label :description %>
<%= f.text_area :description, autofocus: true, autocomplete: "name" %>
<%= f.submit request.path.include?("new") ? "Create" : "Update" %>
<% end %>
