<div class="flex flex-col justify-center items-center">
  <div class="flex flex-col text-center mb-2">
  <h2 class="font-black my-6 text-xl">Log In</h2>
  <%= image_tag "logo.png" %>
  </div>

  <div class="center-me">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :email %><br />
        <div class="ui input">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded' %>
        </div>
      </div>
      <br />
      <div class="field">
        <%= f.label :password %><br />
        <div class="ui input">
          <%= f.password_field :password, autocomplete: "current-password", class: 'rounded' %>
        </div>
      </div>
      <br />
      <div class="flex flex-col justify-center items-center">
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <%= f.submit "Log in", class: "bg-green rounded mt-4 p-2 md:p-2 text-white hover:text-black" %>
      <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
