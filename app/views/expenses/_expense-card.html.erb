<div class="card bg-white p-2 rounded-lg shadow-lg flex my-4 transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-60">
    <%= image_tag icon_name(current_user, expense.group), class: "w-14 h-14 p-2 md:w-20 md:h-20" %>
    <div class="flex flex-col">
        <%= link_to expense.name, expense_path(expense.id), class: "no-underline hover:underline text-blue" %>
        <small class="sm:text-opacity-text-50 md:text-opacity-50">$<%= expense.amount %> | Created on: <%= expense.created_at.strftime("%m/%d/%Y") %></small>
        <div class="flex">
            <div class="mr-1"><%= link_to "Delete", expense_path(expense.id), method: :delete, class: "no-underline hover:underline text-blue" %></div>
            <div class="ml-1"><%= link_to "Edit", edit_expense_path(expense.id), class: "no-underline hover:underline text-blue" %></div>
        </div>
    </div>
</div>