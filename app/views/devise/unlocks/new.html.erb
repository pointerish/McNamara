<div class="ui container">
    <div class="center-me">
        <%= image_tag "updated-logo.png" %>
    </div>
    <h2 class="center-me">Resend unlock instructions</h2>
    <div class="center-me">
    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
        <%= f.label :email %><br />
        <div class="ui input">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
    </div>
    <br />
    <div class="actions">
        <%= f.submit "Resend unlock instructions", class: "ui primary button" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>