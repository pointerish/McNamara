<!DOCTYPE html>
<html>
  <head>
    <title>McNamara</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('updated-logo.png') %>
  </head>

  <body>
    <nav>
      <ul>
        <li>
          <%= link_to "All my expenses", user_expenses_path(user_id: current_user.id) %>
        </li>
        <li>
          <%= link_to "All my external expenses", user_expenses_path(user_id: current_user.id) %>
        </li>
        <li>
          <%= link_to "All Groups", user_groups_path(user_id: current_user.id) %>
        </li>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
