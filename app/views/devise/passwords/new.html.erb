<div class="md:container md:mx-auto mt-12">
    <div class="flex flex-col justify-center items-center">
    <h2 class="font-black my-6 text-xl">Forgot your password?</h2>
    <%= image_tag "logo.png" %>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="flex flex-col justify-center items-center">
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.label :email, class: "text-sm md:text-xl mb-2 mt-4" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded' %>
        <%= f.submit "Send me instructions!", class: "bg-green rounded mt-4 p-2 md:p-2 text-white hover:text-black mb-2"  %>
        <%= render "devise/shared/links" %>
    </div>
    <% end %>
</div>